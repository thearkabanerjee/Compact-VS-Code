{
  "name": "compact-vs-code",
  "displayName": "Compact-VS-Code",
  "description": "makes your vs code setup very minimalistic and compact",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "configurationDefaults": {
      "editor.fontSize": 14,
      "files.autoSave": "afterDelay",
      "workbench.editor.showTabs": "single",
      "editor.minimap.autohide": "mouseover",
      "editor.lineHeight": 2,
      "workbench.statusBar.visible": false,
      "workbench.startupEditor": "none",
      "workbench.tips.enabled": false,
      "breadcrumbs.enabled": false

    },
    "themes": [
      {
        "label": "Compact-VS-Code",
        "uiTheme": "vs-dark",
        "path": "./themes/Compact-VS-Code-color-theme.json"
      }
    ]
  }
}
