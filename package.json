{
  "name": "compact-vs-code",
  "displayName": "Compact-VS-Code",
  "description": "makes your vs code setup very minimalistic and compact",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "configurationDefaults": {
      "editor.fontSize": 14,
      "files.autoSave": "afterDelay",
      // "workbench.editor.showTabs": "multiple",
      // "editor.minimap.autohide": "mouseover",
      "editor.lineHeight": 2,
      "workbench.startupEditor": "welcomePage",
      "workbench.tips.enabled": false

    },
    "themes": [
      {
        "label": "Perry-the-Platypus",
        "uiTheme": "vs-dark",
        "path": "./themes/perry-the-platypus.json"
      },

      {
        "label": "Anya",
        "uiTheme": "vs-dark",
        "path": "./themes/anya.json"
      }
    ]
  }
}
